# Base
set system host-name R2
set interfaces loopback lo address 2.2.2.2/32
set interfaces ethernet eth0 description "to R1"
set interfaces ethernet eth0 address 192.0.2.2/30
set interfaces ethernet eth1 description "to R3"
set interfaces ethernet eth1 address 192.0.2.5/30
set service ssh port 22

# OSPF
set protocols ospf parameters router-id 2.2.2.2
set protocols ospf area 0 network 192.0.2.0/30
set protocols ospf area 0 network 192.0.2.4/30
